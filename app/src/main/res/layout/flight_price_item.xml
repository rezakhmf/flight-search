<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <android.support.constraint.Group android:id="@+id/headerGroup"
                                      android:layout_width="match_parent"
                                      android:layout_height="100dp"
                                      app:constraint_referenced_ids="airlineLogo"

                                      android:background="@color/sectionBackground"/>
    <ImageView
            android:id="@+id/airlineLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ez"
            app:layout_constraintTop_toTopOf="@+id/headerGroup"
            app:layout_constraintLeft_toLeftOf="@id/headerGroup"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"/>

    <TextView
            android:id="@+id/flightTime"
            android:layout_width="113dp"
            android:layout_height="24dp"
            tools:text="15:35 - 17:00"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/airlineLogo"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"/>

    <TextView
            android:id="@+id/flightInOutBound"
            android:layout_width="113dp"
            android:layout_height="24dp"
            tools:text="BUD-LGW, Wizz Air"
            android:textSize="16sp"
            android:textColor="@color/gray_divider"
            android:textStyle="bold|italic"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/flightTime"
            app:layout_constraintLeft_toLeftOf="@id/flightTime"/>

    <TextView
            android:id="@+id/flightStops"
            android:layout_width="113dp"
            android:layout_height="24dp"
            android:text="Direct"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            app:layout_constraintTop_toTopOf="@id/flightTime"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="8dp"/>

    <TextView
            android:id="@+id/flightDuration"
            android:layout_width="113dp"
            android:layout_height="24dp"
            android:text="2h 25m"
            android:textSize="16sp"
            android:textColor="@color/gray_divider"
            android:textStyle="bold|italic"
            app:layout_constraintTop_toTopOf="@id/flightInOutBound"
            app:layout_constraintLeft_toLeftOf="@id/flightStops"/>

	<android.support.constraint.Group android:id="@+id/feedBackPriceGroup"
									  android:layout_width="match_parent"
									  android:layout_height="80dp"
									app:layout_constraintTop_toBottomOf="@+id/headerGroup"
									  android:background="@color/sectionBackground"/>

	<View
			android:id="@+id/view_divider"
			android:layout_width="0dp"
			android:layout_height="2dp"
			android:layout_marginTop="8dp"
			android:background="@color/gray_divider"
			app:layout_constraintEnd_toEndOf="@id/feedBackPriceGroup"
			app:layout_constraintStart_toStartOf="@id/feedBackPriceGroup"
			app:layout_constraintTop_toTopOf="@id/feedBackPriceGroup"></View>

	<ImageView
			android:id="@+id/flightFeedbackIcon"
			android:layout_width="16dp"
			android:layout_height="16dp"
			app:srcCompat="@mipmap/happy_face"
			app:layout_constraintTop_toTopOf="@+id/view_divider"
			app:layout_constraintLeft_toLeftOf="@id/feedBackPriceGroup"
			android:layout_marginTop="24dp"
			android:layout_marginStart="16dp"
			android:layout_centerVertical="true"/>
	<TextView
			android:id="@+id/flightPoint"
			android:layout_width="113dp"
			android:layout_height="24dp"
			tools:text="10.0"
			android:textSize="16sp"
			android:textStyle="bold|italic"
			app:layout_constraintTop_toTopOf="@id/flightPrice"
			android:layout_marginTop="4dp"
			app:layout_constraintLeft_toLeftOf="@id/flightFeedbackIcon"
			android:layout_marginStart="24dp"/>

	<TextView
			android:id="@+id/flightPrice"
			android:layout_width="113dp"
			android:layout_height="24dp"
			tools:text="Â£35"
			android:textSize="16sp"
			android:textStyle="bold|italic"
			app:layout_constraintTop_toTopOf="@id/view_divider"
			app:layout_constraintRight_toRightOf="@id/view_divider"
			android:gravity="end"
			android:layout_marginTop="16dp"
			android:layout_marginEnd="16dp"/>
	<TextView
			android:id="@+id/flightProvider"
			android:layout_width="113dp"
			android:layout_height="24dp"
			tools:text="via Wizzair.com"
			android:textSize="16sp"
			android:textColor="@color/gray_divider"
			android:textStyle="bold|italic"
			app:layout_constraintTop_toBottomOf="@id/flightPrice"
			app:layout_constraintRight_toRightOf="@id/flightPrice"/>


</android.support.constraint.ConstraintLayout>